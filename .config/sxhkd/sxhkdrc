## misc keys

# terminal emulator
alt + Return
	alacritty

# reload sxhkd
alt + s
	killall -e sxhkd; sxhkd &

# open firefox
alt + c
	firefox &

# toggle keyboard language
alt + u
	~/.local/bin/lang &

# increase/decrease volume
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

# mute
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# play next
{XF86AudioNext,XF86AudioPrev}
	playerctl {next,previous}

# play/pause
XF86AudioPlay
	playerctl play-pause

# screenshoot
{_,shift} + Print
    screenshoot {_,-s}


## bspwm keys

# quit/restart bspwm
alt + shift + {q,r} 
	bspc {quit,wm -r} 

# kill node
alt + w
	bspc node -k

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# focus/swap node
alt + {_,shift + }{j,k,l,semicolon}
	bspc node -{f,s} {west,south,north,east}

# focus/send-to i desktop
alt + {1-9}
	bspc desktop -f ^{1-9}

# send node to i-desktop
alt + shift + {1-9} 
	bspc node -d ^{1-9}

# resize borders
alt + ctrl + {j,k,l,semicolon}
	{ \
	bspc node -z left -10 0; bspc node -z right -10 0, \
	bspc node -z bottom 0 10; bspc node -z top 0 10, \
	bspc node -z top 0 -10; bspc node -z bottom 0 -10, \
	bspc node -z right 10 0; bspc node -z left 10 0 \
	}

# rotate nodes
alt + r
	bspc node @parent -R 90

# horizontal/vertical split
alt + {h,v}
	bspc node -p ~{south,east}

#fullscreen
alt + f
	bspc node -t ~fullscreen	

## rofi
# prompt for my org files
alt + o
    org

# application launcher
alt + d
	rofi -show drun -drun-display-format \{name\}
